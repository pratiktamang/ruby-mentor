<div class="min-h-full">
  <%= render "mentees/shared/navbar" %>
  <div class="py-10">
    <header>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">Mentorship</h1>
      </div>
    </header>
    <main>
      <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="text-center border-dashed border-2 border-gray-500 pt-4 pb-4 mt-8 ml-6 mr-6 text-blacb">
          <svg class="mx-auto h-10 w-10 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <% if @mentorships.empty? && @mentor.nil? %>
            <h2 class="mt-2 text-xl font-medium text-black">Awaiting Pairing With Mentor</h2>
            <p class="mt-1 text-sm text-black">In the meantime, take a moment to update your profile</p>
            <div class="mt-6 mb-2">
              <%= link_to "new_mentorship_path", class: "hover:pointer-cursor" do %>
                <div class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-700 hover:bg-red-600 focus:outline-none focus:ring-2">
                  <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Manage Your Profile
                </div>
              <% end %>
            </div>
          <% elsif @mentorships.empty? && !@mentor.nil? %>
            has mentor but no mentorships
          <% else %>
            <div id="mentorships">
              <% @mentorships.each do |mentorship| %>
                <%= render mentorship %>
                <p><%= link_to "Show this mentorship", mentorship %></p>
                <p>Schedule meetings</p>
                <p>Keep track of session, take notes etc</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>
