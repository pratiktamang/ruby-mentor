<% if mentor.onboarded %>
  <% mentorship = Mentorship.find_by(mentor_id: mentor.id) %>
  <tr class="text-xs text-center divide-x divide-gray-200 hover:bg-red-50">
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.created_at.strftime('%B %d %Y') %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">
      <span class="flex flex-col">
        <%= mentor.full_name %>
        <%= mentor.email %>
      </span>
    </td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">
      <% if mentorship %>
        <% mentee = Mentee.find(mentorship.mentor_id) %>
        <%= mentee.full_name %>
      <% else %>
        No mentee assigned
      <% end %>
    </td>

    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.company_url %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.ruby_start_year.strftime('%Y') %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.country %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.city %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.twitter %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.github %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.personal_site %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.past_workplaces %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.previous_mentoring %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.motivation %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.learning_preferences %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.availability %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.industry_expertise %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><%= mentor.mentor_profile&.specific_interests %></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">
      <a href="#" class="text-indigo-600 hover:text-indigo-900">View</a>
    </td>
  </tr>
<% else %>
  <tr class="text-xs text-center divide-x divide-gray-200 hover:bg-red-50">
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm font-medium text-gray-900 sm:pl-0"><%= mentor.created_at.strftime('%B %d %Y') %></td>
    <td class="whitespace-nowrap p-4 text-sm text-gray-500">
      <span class="flex flex-col mb-1">
        <%= mentor.full_name %>
        <%= mentor.email %>
      </span>
      <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs text-red-700 ring-1 ring-inset ring-red-600/10">Not Onboarded</span>
    </td>
    <% 16.times do |i| %>
      <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">-</td>
    <% end %>
    <td class="py-4 pl-3 pr-4 text-right text-sm sm:pr-0">
      <a href="#" class="text-indigo-600 hover:text-indigo-900">View</a>
    </td>
  </tr>
<% end %>
