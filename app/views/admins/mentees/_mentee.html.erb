<% if mentee.onboarded %>
  <% mentorship = Mentorship.find_by(mentee_id: mentee.id) %>
  <tr class="text-xs text-center divide-x divide-gray-200 hover:bg-red-50">
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">
      <span class="pl-4 pr-4">
        <%= mentee.created_at.strftime('%B %d %Y') %>
      </span>
    </td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">
      <span class="flex flex-col">
        <%= mentee.full_name %>
        <%= mentee.email %>
      </span>
    </td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">
      <% if mentorship %>
        <% mentor = Mentor.find(mentorship.mentor_id) %>
        <%= mentor.full_name %>
      <% else %>
      <span class="p-4">
        No mentor assigned
      </span>
      <% end %>
    </td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.country %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.city %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.workplace_url %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.writing_ruby %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.start_source %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.underrepresented_group %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.twitter %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.github %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.personal_site %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.other_languages %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.past_career %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.mentoring_goals %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.learning_preferences %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.availability %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.desired_industry %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4"><%= mentee.mentee_profile&.specific_interests %></span></td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0"><span class="p-4">
      <a href="#" class="text-indigo-600 hover:text-indigo-900">View</a>
    </td>
  </tr>
<% else %>
  <tr class="text-xs text-center divide-x divide-gray-200 hover:bg-red-50">
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm font-medium text-gray-900 sm:pl-0"><%= mentee.created_at.strftime('%B %d %Y') %></td>
    <td class="whitespace-nowrap p-4 text-sm text-gray-500">
      <span class="flex flex-col mb-1">
        <%= mentee.full_name %>
        <%= mentee.email %>
      </span>
      <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs text-red-700 ring-1 ring-inset ring-red-600/10">Not Onboarded</span>
    </td>
    <% 16.times do |i| %>
      <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">-</td>
    <% end %>
    <td class="py-4 pl-3 pr-4 text-right text-sm sm:pr-0">
      <a href="#" class="text-indigo-600 hover:text-indigo-900">View</a>
    </td>
  </tr>
<% end %>
