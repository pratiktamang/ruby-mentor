<%= render "admins/shared/skeleton" do %>
  <%= turbo_frame_tag "admin_content" do %>
    <div class="-mx-4 mt-8 sm:-mx-0 overflow-x-scroll">
      <table class="min-w-full divide-y divide-gray-300">
        <thead class="">
          <tr>
            <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 lg:table-cell">Signed Up</th>
            <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 lg:table-cell">Mentee</th>
            <% @mentee_headers.each do |header| %>
              <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 lg:table-cell"><%= header.titleize %></th>
            <% end %>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
              <span class="sr-only">Edit</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @mentees.each do |mentee| %>
            <%= render "mentee", mentee: mentee %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
