<div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
  <% active_tab = params[:tab] || "dashboard" %>

  <%= link_to mentees_dashboard_path(tab: "dashboard"),
    class: "#{active_tab == "dashboard" ? "border-red-500 text-gray-900 " : "border-transparent text-gray-500"} hover:border-gray-300 hover:text-gray-700 inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium",
    "aria-current": ("page" if active_tab == "dashboard") do %>
    Dashboard
  <% end %>

  <%= link_to mentees_dashboard_path(tab: "mentorship"),
    class: "#{active_tab == "mentorship" ? "border-red-500 text-gray-900 " : "border-transparent text-gray-500"} hover:border-gray-300 hover:text-gray-700 inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium",
    "aria-current": ("page" if active_tab == "mentorship") do %>
    Mentorship
  <% end %>
</div>
